{
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "build": "yarn workspace web build",
    "dev": "yarn concurrently -n web,api -c red,cyan 'yarn dev-web' 'yarn dev-api'",
    "dev-web": "yarn workspace web dev",
    "dev-api": "concurrently -n dev,watch 'yarn workspace api dev' 'yarn workspace api watch'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "prettier": "^2.0.5"
  }
}
