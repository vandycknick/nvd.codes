---
import type { PostPreview } from "./types"
import PostCard from "./PostCard.astro"

interface Props {
  posts: PostPreview[]
}

const { posts } = Astro.props
---

<section class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4 py-6">
  {posts.map((post) => <PostCard post={post} />)}
</section>
