{
  "name": "api",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .dist",
    "watch": "tsc -w",
    "predev": "yarn clean && tsc",
    "dev": "cd .dist && func extensions install && func start",
    "copy-package": "cat package.json | jq 'del(.devDependencies, .scripts, .dependencies[\"@nvd.codes/core\"])' > .dist/package.json",
    "build": "yarn clean && tsc && yarn copy-package && cd .dist && yarn --production && rm -f local.settings.json"
  },
  "dependencies": {
    "@nvd.codes/core": "^1.0.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@azure/functions": "^1.2.2",
    "@nvd/tsconfig": "^1.0.0",
    "@types/node-fetch": "^2.5.7",
    "typescript": "^4.0.2"
  }
}
