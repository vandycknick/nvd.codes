{
  "extends": "@nvd/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": "src"
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "emotion.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
